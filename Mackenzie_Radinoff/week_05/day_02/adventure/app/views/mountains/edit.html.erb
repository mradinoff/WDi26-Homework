<h2>Edit Mountain</h2>

<form action="/mountains/<%= @mountain.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="mountain[name]" placeholder="Mt Massive" value="<%=@mountain.name%>">

  <label>Image:</label>
  <input type="url" name="mountain[image]" placeholder="http://..." value="<%=@mountain.image%>">

  <label>Elevation:</label>
  <input type="number" name="mountain[elevation]" placeholder="(in Earth days)" value= "<%=@mountain.elevation%>">

  <label>Location:</label>
  <input type="number" name="mountain[location]" placeholder="10000000" value = "<%=@mountain.location%>">

  <label>First Summit:</label>
  <input type="number" name="mountain[first_ascent]" placeholder="1843" value ="<%@mountain.first_ascent%>">

  <label>Easiest Routs:</label>
  <input type="number" name="mountain[easiest_route]" placeholder="Planes, Trains, Automobile?" value="<%=@mountain.easiest_route%>">

  <button>Edit mountain</button>
</form>
